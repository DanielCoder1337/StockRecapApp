
<section class="jumbotron text-center">
    <div class="container">
    <h1 class="jumbotron-heading">Welcome to {{portfolio.name}}<br>The value of the portfolio is <strong>{{portfolio.value}}kr</strong></h1>
    <p class="lead text-muted">{{portfolio.description}}</p>
    {{#if activeInvestor}}
        <h3 class="jumbotron-heading">Profit: <strong style="color:{{#if gain}}green{{else}}red{{/if}}">{{profitData.profit}}kr</strong><br>Your investment: <strong>{{profitData.userInvestedTotal}}kr</strong><br>Total valuation: {{totalValuation}}<br>Overall total investment: <strong>{{profitData.totalInvested}}kr</strong></h3>
    {{/if}}
    <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
            <a type="button" class="btn btn-sm btn-outline-secondary" href="/portfoliosInvetors/{{portfolio.id}}">Investors</a>
        </div>
    </div>
    </div>
</section>

{{#if admin}}
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <div class="col">
                <div class="text-center">
                    <form action="/portfoliosAddInvestor/{{portfolio.id}}" method="POST" class="form-signin">
                        <img class="mb-4" src="LOGO" alt="" width="72" height="72">
                        <h1 class="h3 mb-3 font-weight-normal">Add Investor</h1>
                        <label for="inputEmail" class="sr-only">Email of investor</label>
                        <input type="email" id="inputEmail" class="form-control" name="investorEmail" placeholder="Email" required="" autofocus="">
                        <label for="inputValue" class="sr-only">Investment value</label>
                        <input type="number" id="inputValue" class="form-control" name="investorValue" placeholder="Value of the investment" required="" autofocus="">
                        <hr class="mb-4">
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
                        <p class="mt-5 mb-3 text-muted">© 2017-2018</p>
                    </form>
                </div>
            </div>
            <div class="col">
                <div class="text-center">
                    <form action="/portfolioValueChange/{{portfolio.id}}" method="POST" class="form-signin">
                        <img class="mb-4" src="LOGO" alt="" width="72" height="72">
                        <h1 class="h3 mb-3 font-weight-normal">Change total value of portfolio</h1>
                        <label for="inputNewValue" class="sr-only">Portfolio value</label>
                        <input type="number" id="inputNewValue" class="form-control" name="newPortfolioValue" placeholder="Value of the portfolio" required="" autofocus="" value="{{portfolio.value}}">
                        <hr class="mb-4">
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                        <p class="mt-5 mb-3 text-muted">© 2017-2018</p>
                    </form>
                </div>
            </div>

            <!--<a type="button" class="btn btn-sm btn-outline-secondary" href="/portfolioAddInvestor/{{portfolio.id}}">Add investor</a>-->
        </div>
    </div>
{{/if}}